<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | HealthLink</title>
    <link rel="stylesheet" href="/css/Login.css">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="icon" href="./img/healthlink_logo.png">
</head>
<body>

    <!-- Header -->
    <header>
        <a href="/">
            <img src="/img/healthlink_logo.png" alt="HealthLink Logo" class="logo logo-left">
        </a>        
        <h1 class="project-name">HealthLink</h1>
        <img src="/img/ApexLegion.png" alt="HealthLink Logo" class="logo logo-right">
    </header>

    <!-- Login Form -->
    <div class="container">
        <h2>Login</h2>

        <form action="/login" method="POST">
            <input type="email" name="email" placeholder="Email" required>
            <input type="password" name="password" placeholder="Password" required>
            <button type="submit">Login</button>

            <!-- Error Message Below the Button -->
            <% if (typeof message !== "undefined" && message) { %>
                <div class="error-message">
                    <p><%= message %></p>
                </div>
            <% } %>
        </form>

        <p>Don't have an account? <a href="/signup" style="color: aqua;">Sign up here</a></p>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2025 HealthLink. All rights reserved. Developed by Team ApexLegion.</p>
    </footer>

</body>
</html>
